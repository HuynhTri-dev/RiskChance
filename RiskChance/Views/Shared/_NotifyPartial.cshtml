@model IEnumerable<RiskChance.Models.ThongBao>

@{
    Layout = null;  // Nếu bạn cần tắt layout trong partial view
}

@section Styles {
    <style>
        .notify-list{
            max-height: 400px;
            overflow-y: auto;
        }
    </style>
}

<section class="notify-list">
    @if (Model != null && Model.Any())
    {
        foreach (var noti in Model)
        {
            <a id="wrapper-@noti.IDNoti" href="#" onclick="markAsRead(event, @noti.IDNoti)" class="container-fluid notify-box d-flex align-items-center text-decoration-none">
                <div class="avatar-box d-none d-sm-block">
                    <img class="rounded-circle user-img"
                         src="@(!string.IsNullOrEmpty(noti.NguoiGui.AvatarUrl) ? noti.NguoiGui.AvatarUrl : Url.Content("~/assets/user/image.png"))"
                         alt="avatar" />
                </div>

                <div class="notify-content">
                    <p class="line-clamp-2">
                        @noti.NoiDung
                    </p>
                    <span class="date-text">@noti.NgayGui.ToString("dd/MM/yyyy")</span>
                </div>

            </a>
        }
    }
    else
    {
        <div class="text-center">
            <p class="text-muted">No notifications.</p>
        </div>
    }
</section>

