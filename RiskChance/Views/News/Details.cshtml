@{
    ViewData["Title"] = "Details";
    var imgNguoiDang = !string.IsNullOrEmpty(Model.ImgNguoiDang) ? Model.ImgNguoiDang : Url.Content("~/assets/user/image.png");
}

<link rel="stylesheet" href="~/css/detailNews.css" />

<style>
    #content-news strong {
        font-weight: bold;
    }

    #content-news i {
        font-style: italic;
    }
</style>

@model RiskChance.Models.ViewModel.TinTucViewModel.TinTucBoxViewModel

<div class="mt-4 row container mx-auto">
    <!-- News detail -->
    <div class="col-md-8 mx-auto">
        <div class="new-box container-fluid">
            <h1 class="h1 fw-bold mb-3 container-fluid text-center">@Model.Title</h1>

            <a class="text-decoration-none d-flex align-items-center mb-2"
               href="#">
                <img class="rounded-circle"
                     width="50px"
                     height="50px"
                     style="object-fit: cover; margin-right: 10px"
                     src="@imgNguoiDang"
                     alt="avatar - @Model.NameNguoiDang" />
                <p>@Model.NameNguoiDang</p>
            </a>

            <p class="mb-2">Date: <span>@Model.NgayDang?.ToString("dd/MM/yyyy")</span></p>

            <div class="new-img-box mb-3 d-flex justify-content-center">
                <img class="img-fluid mx-auto rounded"
                     src="@Model.ImgTinTuc"
                     alt="news - @Model.Title" />
            </div>

            <div class="content-news-box container-fluid">
               <pre id="content-news" class="content text-justify" style="white-space: pre-wrap">
                    @Html.Raw(Model.NoiDung)
              </pre>
            </div>

            <!-- hashtag list -->
            <div class="container-fluid fw-bold">
                <span>Hashtag: </span>
                @if (Model.Hashtags != null)
                {
                    @foreach (var hashtag in Model.Hashtags)
                    {
                        <span class="hashtag">@hashtag.TenHashtag</span>
                    }
                }
            </div>
        </div>

        <!-- Binh luan -->
        <h3 class="h3 fw-bold mt-4">Comments</h3>
        <div id="commentSection" class="mt-3 mb-3">
            <!-- Khu vực nhập bình luận -->
            <div class="card p-3 mt-3 shadow-sm">
                <h6 class="h6 mb-2">Add comments</h6>

                <label class="mb-1 d-flex align-items-center">
                    <p style="margin-right: 15px">Chọn điểm đánh giá:</p>
                    <select id="rating"
                            class="form-select mb-2"
                            style="width: 200px">
                        <option value="5">⭐⭐⭐⭐⭐</option>
                        <option value="4">⭐⭐⭐⭐</option>
                        <option value="3">⭐⭐⭐</option>
                        <option value="2">⭐⭐</option>
                        <option value="1">⭐</option>
                    </select>
                </label>

                <textarea id="commentText"
                          class="form-control mb-2"
                          rows="3"
                          placeholder="Writing your comment"></textarea>

                <button class="btn btn-primary fw-bold">Send Comment</button>
            </div>

            <!-- Khu vực hiển thị bình luận -->
            <div id="commentsContainer"
                 class="p-3 bg-light mt-3 rounded border shadow-sm"
                 style="max-height: 300px; overflow-y: auto">
                <div id="commentsList" class="mb-3">
                    <p class="text-muted">Chưa có bình luận nào.</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Aside -->
    <aside class="col-md-4 mx-auto"></aside>
</div>