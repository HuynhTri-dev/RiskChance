@model IEnumerable<RiskChance.Models.GiayTo>

<section class="doc-list">
    <div class="row fw-bold">
        <p class="col-5">Name</p>
        <p class="col-4">Type</p>
        <p class="col-3">Date</p>
    </div>

    @if (Model != null && Model.Any())
    {
        @foreach (var doc in Model)
        {
            <a href="#" class="doc-item row text-decoration-none align-items-center">
                <p class="col-5 text-truncate">@doc.TenGiayTo</p>
                <p class="col-4 text-truncate">@doc.LoaiFile</p>
                <p class="col-3 text-truncate">@doc.NgayTao.ToString("dd/MM/yyyy")</p>
            </a>
        }
    }
    else
    {
        <p class="text-muted mt-3 text-center">None Document</p>
    }
</section>

