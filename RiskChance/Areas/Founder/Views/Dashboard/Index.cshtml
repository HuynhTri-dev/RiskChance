@{
    Layout = "~/Areas/User/Views/Shared/_ProfileLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

@model RiskChance.Areas.Founder.ViewModels.DashboardViewModel

<div class="w-25">
    <label for="StartupList">Select Startup:</label>
    @Html.DropDownListFor(x => x.SelectedStartupId, Model.startupSelectList, new { @class = "form-control", id = "startupDropdown" })
</div>

<!-- Founder -->
<div class="founder-dashboard-container container-fluid row mb-3 mt-3 mx-auto">
    <!-- Startup Information -->
    <div class="startup-box col-md-5 mx-auto">
        <!-- Thong tin -->
        <div class="startup-info-box box container-fluid p-3 mb-3 mx-auto">
            <div class="logo-name-box d-flex justify-content-center align-items-center mb-2">
                <img class="logo rounded-circle"
                     src="../assets/logo startup/bnb_crypto_icon_264371.ico"
                     alt="" />
                <h5 class="h5 fw-bold">House Manage</h5>
            </div>
            <hr />
            <p><span class="fw-bold">Business:</span> Service</p>
            <p class="fw-bold">Description:</p>
            <div class="desc-box text-justify">
                <p>
                    Lorem, ipsum dolor sit amet consectetur adipisicing elit. Ea
                    illum mollitia quibusdam praesentium eaque repudiandae ut
                    consectetur, veniam quod vel nihil totam sed. Tempora,
                    mollitia obcaecati perferendis cupiditate labore reiciendis.
                </p>
            </div>
            <hr />
            <p><span class="fw-bold">Target:</span> 100.000.000 VNĐ</p>
            <p><span class="fw-bold">Percentage of shares:</span> 20%</p>
            <p><span class="fw-bold">Status:</span> Approved Successfully</p>
            <hr />
            <div class="feature-box d-flex justify-content-around">
                <button class="btn btn-primary fw-bold">Update</button>
                <button class="btn btn-danger fw-bold">Delete</button>
            </div>
        </div>

        <!-- interact -->
        <div class="box p-3 mb-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-chart-line fa-2x text-info"></i>
                <div class="ms-3">
                    <h5 class="mb-1">Lượt tương tác (7 ngày)</h5>
                    <h3 class="fw-bold" id="totalInteractions">8,920</h3>
                </div>
            </div>
        </div>

        <!-- Hop dong can xet duyet -->
    </div>

    <!-- Data -->
    <div class="data-box col-md-7 mx-auto">
        <!-- Amout of target and the number of investor -->
        <div class="target-box box p-3 mb-3">
            <!-- Target -->
            <div class="target-box mb-3">
                <h5 class="h5 fw-bold">Target: 100.000.000 VNĐ</h5>
                <div class="progress mt-2" style="height: 20px">
                    <div class="progress-bar" style="width: 50%">
                        <p class="fw-bold">50%</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Số startup đăng ký -->
                <div class="col-md-6">
                    <div class="card p-2 shadow-sm">
                        <div class="d-flex align-items-center">
                            <i class="fa-solid fa-handshake fa-2x text-success"></i>
                            <div class="ms-3">
                                <h5 class="mb-1">Co-Investors</h5>
                                <h3 class="fw-bold" id="totalStartups">10</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tổng số tiền đầu tư -->
                <div class="col-md-6">
                    <div class="card p-2 shadow-sm">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-dollar-sign fa-2x text-warning"></i>
                            <div class="ms-3">
                                <h5 class="mb-1">Total investment</h5>
                                <h3 class="fw-bold" id="totalInvestment">50.000.000</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- danh sach hop dong -->
        <div class="contact-box box p-3 mb-3">
            <h4 class="h4 fw-bold">Contracts List</h4>
            <hr />
            <section class="doc-list">
                <div class="row">
                    <p class="col-4 fw-bold">Name</p>
                    <p class="col-3 fw-bold">ID Contact</p>
                    <p class="col-4 fw-bold">Contract Value</p>
                    <p class="col-1"></p>
                </div>

                <!-- Thêm bằng vòng lặplặp -->
                <!-- Nen xanh la da ky -->
                <!-- Nen do la chua ky -->
                <!-- nen cam la dang ky -->
                <a class="doc-item row text-decoration-none align-items-center"
                   href="../page/contract.html">
                    <p class="col-4">Tri11</p>
                    <p class="col-3">1245</p>
                    <p class="col-4">100.000.000</p>
                    <div class="col-1">
                        <div class="success-status"></div>
                    </div>
                </a>

                <a class="doc-item row text-decoration-none align-items-center"
                   href="#">
                    <p class="col-4">Tri11</p>
                    <p class="col-3">1245</p>
                    <p class="col-4">100.000.000</p>
                    <div class="col-1">
                        <div class="update-status"></div>
                    </div>
                </a>

                <a class="doc-item row text-decoration-none align-items-center"
                   href="#">
                    <p class="col-4">Tri11</p>
                    <p class="col-3">1245</p>
                    <p class="col-4">100.000.000</p>
                    <div class="col-1">
                        <div class="non-success-status"></div>
                    </div>
                </a>
                <!--  -->
            </section>
        </div>

        <!-- Giay to -->
        <div class="startup-doc-box box container-fluid p-3">
            <h4 class="h4 fw-bold">Documents List</h4>
            <hr />
            <section class="doc-list">
                <div class="row fw-bold">
                    <p class="col-6">Name</p>
                    <p class="col-5">Type</p>
                    <p class="col-1"></p>
                </div>

                <!-- Thêm bằng vòng lặplặp -->
                <a href="#"
                   class="doc-item row text-decoration-none align-items-center">
                    <p class="col-6">Báo cáo kinh doanh quý 11</p>
                    <p class="col-5">Financial Report</p>
                    <div class="col-1">
                        <div class="non-success-status"></div>
                    </div>
                </a>
                <!--  -->
            </section>
        </div>
    </div>
</div>
