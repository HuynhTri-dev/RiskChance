@model RiskChance.Models.LinhVuc

@{
    ViewData["Title"] = "Chỉnh sửa Lĩnh Vực";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .form-container {
        max-width: 400px;
        margin: 20px auto;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .form-container h2 {
            text-align: center;
            margin-bottom: 15px;
            color: #333;
        }

    .form-group {
        margin-bottom: 12px;
    }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-group input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 6px;
        }

    .btn-container {
        display: flex;
        justify-content: space-between;
    }

    .btn-primary {
        padding: 10px 15px;
        font-size: 14px;
        font-weight: bold;
        border: none;
        cursor: pointer;
        border-radius: 6px;
        background-color: #007bff;
        color: white;
        transition: 0.3s;
        display: flex;
        align-items: center;
    }

        .btn-primary i {
            margin-right: 5px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-secondary {
        padding: 10px 15px;
        font-size: 14px;
        font-weight: bold;
        border: none;
        cursor: pointer;
        border-radius: 6px;
        background-color: #6c757d;
        color: white;
        transition: 0.3s;
        display: flex;
        align-items: center;
    }

        .btn-secondary i {
            margin-right: 5px;
        }

        .btn-secondary:hover {
            background-color: #545b62;
        }
</style>

<div class="form-container">
    <h2>✏️ Chỉnh sửa Lĩnh Vực</h2>

    <form asp-action="Edit">
        <input type="hidden" asp-for="IDLinhVuc" />

        <div class="form-group">
            <label asp-for="TenLinhVuc">Tên Lĩnh Vực</label>
            <input asp-for="TenLinhVuc" />
        </div>

        <div class="btn-container">
            <button type="submit" class="btn-primary">
                💾 Lưu
            </button>
            <a asp-action="Index" class="btn-secondary">
                🔙 Hủy
            </a>
        </div>
    </form>
</div>
