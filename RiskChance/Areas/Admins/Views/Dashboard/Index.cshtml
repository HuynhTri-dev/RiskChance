@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <link href="~/css/dashboardAdmin.css" rel="stylesheet" />
}

<div class="mt-3 container mx-auto">
    <div class="row g-2 d-flex align-items-stretch">
        <div class="col-lg-5 col-md-6 d-flex mx-auto">
            <div class="card flex-fill">
                <!-- Line Chart - Lượt truy cập -->
                <div class="chart-box">
                    <div class="chart-startup-data-header">
                        <h4 class="h4 fw-bold"><i class="fa-solid fa-chart-line"></i> Website Visits</h4>
                    </div>
                    <div class="canvas-wrapper">
                        <canvas id="accessLogChart"></canvas>
                    </div>
                </div>
                <hr />
                <!-- Dòng 4 thẻ Basic Data -->
                <div class="d-flex align-items-center justify-content-center container mx-auto text-center">
                    <!-- Startup Đã Đăng -->
                    <div class="bs-data-item flex-fill">
                        <div style="color: #375cb3;">
                            <i class="fa-solid fa-rocket"></i>
                            <span class="fw-bold">Startups</span>
                        </div>
                        <h4 class="fw-bold h4">@ViewBag.TotalStartups</h4>
                    </div>

                    <!-- Tin Tức -->
                    <div class="bs-data-item flex-fill">
                        <div style="color: #28a745;">
                            <i class="fa-solid fa-newspaper"></i>
                            <span class="fw-bold">News</span>
                        </div>
                        <h4 class="fw-bold h4">@ViewBag.TotalNews</h4>
                    </div>

                    <!-- Yêu Cầu Xét Duyệt -->
                    <div class="bs-data-item flex-fill">
                        <div style="color: #ffc107;">
                            <i class="fa-solid fa-hourglass-half"></i>
                            <span class="fw-bold">WFR</span>
                        </div>
                        <h4 class="fw-bold h4">@ViewBag.PendingStartups</h4>
                    </div>

                    <!-- Tổng số người dùng -->
                    <div class="bs-data-item flex-fill">
                        <div style="color: #5DADE2;">
                            <i class="fa-solid fa-user"></i>
                            <span class="fw-bold">User</span>
                        </div>
                        <h4 class="fw-bold h4">@ViewBag.UserAccount</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-7 col-md-6 d-flex mx-auto">
            <div class="card flex-fill">
                <!-- Stacked Bar Chart - Số lượng hợp đồng theo trạng thái -->
                <div class="chart-box">
                    <div class="chart-startup-data-header">
                        <h4 class="h4 fw-bold"><i class="fa-solid fa-chart-bar"></i> Contract</h4>
                    </div>
                    <div class="canvas-wrapper">
                        <canvas id="contractStatusChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="row g-2 d-flex align-items-stretch">
        <div class="col-lg-6">
            <!-- Chart Card for Bar Chart (Số lượng Startup theo tháng) -->
            <div class="chart-startup-data mx-auto">
                <!-- Header -->
                <div class="chart-startup-data-header">
                    <h4 class="h4 fw-bold">
                        <i class="fa-solid fa-chart-simple"></i>
                        New Startups
                    </h4>
                </div>

                <!-- Chart Canvas -->
                <div class="canvas-wrapper">
                    <canvas id="startupChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <!-- Chart Card for Pie Chart (Số lượng Startup theo lĩnh vực) -->
            <div class="chart-startup-data mx-auto">
                <!-- Header -->
                <div class="chart-startup-data-header">
                    <h4 class="h4 fw-bold">
                        <i class="fa-solid fa-chart-pie"></i>
                        Startups by Bussiness
                    </h4>
                </div>

                <!-- Chart Canvas - Centered and enlarged -->
                <div class="canvas-wrapper d-flex justifi-content-center align-items-center">
                    <canvas id="startupLinhVucChart"></canvas>
                </div>

            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-adapter-date-fns"></script>
    <script src="~/js/AdminDashboard.js"></script>
}

