@{
    Layout = "_ProfileLayout";
    ViewData["Title"] = "Profile";
}

<div class="profile-container container-fluid mb-4 mx-auto">
    <h2 class="h2 text-center fw-bold mb-3">Personal Profile</h2>
    <div class="d-flex justify-content-center align-items-center">
        <img id="profileImage"
             src="../assets/user/tri lor.jpg"
             class="rounded-circle" />
        <input type="file" id="imageUpload" class="d-none" />
        <button class="btn btn-sm btn-outline-primary mt-2"
                onclick="$('#imageUpload').click();">
            Thay đổi ảnh
        </button>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label for="fullName" class="form-label">Full Name:</label>
            <input type="text" id="fullName" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Phone Number:</label>
            <input type="text" id="phone" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Role Account:</label>
            <input type="text" id="role" class="form-control" disabled />
        </div>
        <div class="d-flex justify-content-around align-items-center">
            <button class="btn btn-primary fw-bold">Update</button>
            <button class="btn btn-danger fw-bold"
                    data-bs-toggle="modal"
                    data-bs-target="#changePasswordModal">
                Change Password
            </button>
        </div>
    </div>
</div>
